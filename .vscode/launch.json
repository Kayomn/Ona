{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "(gdb) Launch",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/output/engine",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}/assets",
			"environment": [
				{"name": "LD_LIBRARY_PATH", "value": "${workspaceFolder}/output"}
			],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			]
		}
	]
}
